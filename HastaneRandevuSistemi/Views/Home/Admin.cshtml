@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Giriş Yap</h2>
            <hr />
            <form asp-action="AdminGiris" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label for="Email" class="control-label">E-Posta:</label>
                    <input type="email" id="Email" name="Email" class="form-control" required />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Sifre" class="control-label">Şifre:</label>
                    <input type="password" id="Sifre" name="Sifre" class="form-control" required />
                    <span class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Giriş Yap" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>