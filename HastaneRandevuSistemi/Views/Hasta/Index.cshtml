@model IEnumerable<HastaneRandevuSistemi.Models.Hasta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Isim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KimlikNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DogumTarihi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            @inject IHttpContextAccessor HttpContextAccessor
            @if (item.KimlikNo == HttpContextAccessor.HttpContext.Session.GetString("SessionUser"))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Isim)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KimlikNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DogumTarihi)
                    </td>
                    <td>
                    </td>
                </tr>
            }
        }   
    </tbody>
</table>
