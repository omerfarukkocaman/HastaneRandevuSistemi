@model HastaneRandevuSistemi.Models.Hasta

@{
    ViewData["Title"] = "Giriş Yap";
}

@if (TempData["hata"] is not null)
{
    <div class="alert alert-danger">@TempData["hata"]</div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Giriş Yap</h2>
            <hr />
            <form asp-action="GirisYap" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="KimlikNo" class="form-label">Kimlik No</label>
                    <input asp-for="KimlikNo" class="form-control" required />
                    <span asp-validation-for="KimlikNo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sifre" class="form-label">Şifre</label>
                    <input asp-for="Sifre" type="password" class="form-control" required />
                    <span asp-validation-for="Sifre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </div>
            </form>

            <div class="mb-3">
                <a class="btn btn-secondary" asp-area="" asp-controller="Hasta" asp-action="KayitOl">Kayıt Ol</a>
            </div>

            <div class="text-center">
                <a class="text-dark" asp-area="" asp-controller="Doktor" asp-action="DoktorGiris"><u>Doktor Giriş</u></a>
            </div>
        </div>
    </div>
</div>
